	</div>
	<div class="col-xs-12 col-sm-6 col-lg-6 col-md-6  espace-bottom espace-top">
	<div class="form-group">
	<span style="color:red;">{{ form_errors(form.file) }}</span>
	{{ form_widget(form.file) }}
	</div>
	</div>
	</fieldset>
	<fieldset>
	<legend>Désignation donné aux habitants de ce continent</legend>
	<div class="col-xs-12 col-sm-6 col-lg-6 col-md-6  espace-bottom espace-top">
	<div class="form-group citoyen">
	<span style="color:red;">{{ form_errors(form.citoyen) }}</span>
	{{ form_widget(form.citoyen) }}
	</div>
	<div class="alert alert2 alert-danger" style="display:none">
	<h4>Erreur !</h4>
	Valeur comprise entre 4 et 60 caractères !
	</div>
	</div>
	<div class="col-xs-12 col-sm-6 col-lg-6 col-md-6  espace-bottom espace-top">
	<div class="form-group citoyenne">
	<span style="color:red;">{{ form_errors(form.citoyenne) }}</span>
	{{ form_widget(form.citoyenne) }}
	</div>
	<div class="alert alert3 alert-danger" style="display:none">
	<h4>Erreur !</h4>
	Valeur comprise entre 4 et 60 caractères !
	</div>
	</div>
	<div class="col-xs-12 col-sm-6 col-lg-6 col-md-6  espace-bottom espace-top">
	<div class="form-group siteweb">
	<span style="color:red;">{{ form_errors(form.siteweb) }}</span>
	{{ form_widget(form.siteweb) }}
	</div>
